{
  "include": [
      "src/**/*"
  ],
  "exclude": [
      "node_modules"
  ],
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "*": ["types/*"]
    },

    "rootDir": "src/",
    "locale": "ko",
    "pretty": true,
    "strict": true,
    "outDir": "dist/"
  }
}